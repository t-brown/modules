#%Module

proc ModulesHelp { } {
    puts stderr "This module sets the path and environment variables for petsc-3.5.2"
    puts stderr "     see http://www.mcs.anl.gov/petsc/ for more information      "
    puts stderr ""
}
module-whatis "PETSc - Portable, Extensible Toolkit for Scientific Computation"

set petsc_dir   /apps/petsc/3.5.2-impi-5.0.2.044
set petsc_arch  "" 

setenv PETSC_ARCH $petsc_arch
setenv PETSC_DIR $petsc_dir
prepend-path PATH /apps/petsc/3.5.2-impi-5.0.2.044/bin

conflict petsc
