#%Module######################################################################
##
##     hdf4
##
proc ModulesHelp { } {
puts stderr "\tHDF4g - sets up the HDF4 library"
puts stderr "\t\tto work with the Intel compilers.\n"
puts stderr "\tPath $path/*\n"
puts stderr "\tVersion $version\n"
}

set compiler intel
set sys         [uname sysname]
set base        /apps/hdf4
set ver         4.2.7-$compiler
set path        $base/$ver
conflict pgi hdf4
prereq szip

setenv HDF4 $path
prepend-path PATH $path/bin
prepend-path MANPATH $path/share/man

setenv HDF4_INCLUDE_OPTS " -I$path/include"
setenv HDF4_LINK_OPTS    " -L$path/lib -lmfhdf -ldf"

conflict hdf4
