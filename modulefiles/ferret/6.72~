#%Module######################################################################
##
##     ferret
##
proc ModulesHelp { } {
        puts stderr "Sets up the paths you need to use ferret"
}

set sys         [uname sysname]
set base        /apps/ferret
set ver         6.72
set path        $base/$ver

   setenv       FER_DIR         $path
   prepend-path PATH            $path/bin
   prepend-path LD_LIBRARY_PATH $path/lib

conflict ferret
