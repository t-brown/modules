#%Module######################################################################
##
##      cuda
##
proc ModulesHelp { } {
        puts stderr "Sets up the paths you need to use cuda"
}

set sys         [uname sysname]

set base        /apps/cuda
set arch        x86_64
set ver         cuda-7.5
set path        $base/$ver


if { $sys == "Linux" } {
   prepend-path PATH		$path/bin
   prepend-path CPATH           $path/include
   prepend-path MANPATH		$path/man
   prepend-path LD_LIBRARY_PATH $path/lib64
#  prepend-path LD_LIBRARY_PATH $path/libnsight      # Nor sure if needed -Raghu
#  prepend-path LD_LIBRARY_PATH $path/libnvvp	     # Nor sure if needed -Raghu


   setenv CUDA_ROOT		$path
   setenv CUDA_PATH             $path
   setenv CUDA_INCLUDE_OPTS	"-I $path/include"
   setenv CUDALIBDIR		$path/lib64
}

conflict cuda
