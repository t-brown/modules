proc ModulesHelp { } {
        puts stderr "Sets up the paths you need to use GrADS 2.0.2"
}

set sys         [uname sysname]
set base        /apps/grads
set ver         2.0.2
set path        $base

if { $sys == "Linux" } {
   setenv GRADS_ROOT    $base
   setenv GADDIR        $base/data
   append-path GASCRP   $base/scripts
   prepend-path PATH    $base/$ver/bin
}

conflict grads
