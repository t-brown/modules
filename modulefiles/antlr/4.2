proc ModulesHelp { } {
        puts stderr "Sets up the paths you need to use antlr 4.2"
}

set sys         [uname sysname]
set base        /apps/antlr/4.2
set ver         4.2
set path        $base

if { $sys == "Linux" } {
   setenv ANTLR_ROOT         $base
   prepend-path CLASSPATH    .:$base/antlr-4.2-complete.jar

# Currently not working; Need to figure out how. --Raghu
#
   set-alias antlr4 "java -jar    $base/antlr-4.2-complete.jar"
   set-alias grun   "java org.antlr.v4.runtime.misc.TestRig"
}

conflict antlr
